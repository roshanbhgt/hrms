                <td><?php echo $this->escapeHtml($val->firstname);?></td>
                <td><?php echo $this->escapeHtml($val->lastname);?></td>
                <td><?php echo $this->escapeHtml($val->email);?></td>
                <td><?php echo $this->escapeHtml($val->state);?></td>
                <td><?php echo $this->escapeHtml($val->country);?></td>
